[class^="step-"] {
	position: relative;
	padding: 5px 0;
}

.hidden_number {
	transition: all .5s ease-in-out;

	&.hide {
		height: var(--number-height);
		overflow: hidden;
		margin-bottom: 0;
		padding: 0 5px;
	}
