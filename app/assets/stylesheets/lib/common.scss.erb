	border: 1px solid var(--color-line-stronger);
	border-radius: var(--border-radius);
	display: flex;
	justify-content: space-between;
	padding: 1em;
	transition: background-color .5s ease-in-out, color .5s ease-in;

	&.active {
		background: var(--green);
		border: 1px solid var(--dark-green);

		.cell_division {
			color: var(--high-season-text);
		}
	}

	.cell_division {
		margin: 0;
	}
}

.switch {
	display: inline-block;
	height: 34px;
	margin: 0;
	position: relative;
	width: 60px;

	input {
		height: 0;
	  opacity: 0;
	  width: 0;
	}
}

.slider {
	background-color: var(--high-season-input-bg);
	bottom: 0;
	cursor: pointer;
  position: absolute;
	left: 0;
	right: 0;
  -webkit-transition: .4s;
  transition: .4s;
	top: 0;

	&:before {
		background-color: white;
		bottom: 4px;
	  content: '';
	  height: 26px;
	  left: 4px;
		position: absolute;
	  -webkit-transition: .4s;
	  transition: .4s;
		width: 26px;
	}

	input:checked + & {
		background-color: var(--dark-green);

		&:before {
			background-color: var(--green);
		}
	}

	input:focus + & {
		box-shadow: 0 0 1px #2196F3;
	}

	input:checked + &:before {
		-webkit-transform: translateX(26px);
		-ms-transform: translateX(26px);
		transform: translateX(26px);
	}

	&.round {
		border-radius: 34px;
	}

	&.round:before {
		border-radius: 50%;
	}
}

.pika {
