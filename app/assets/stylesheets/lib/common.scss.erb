@import "lib/fontello";

body {
	background: var(--body-color);
	font-family: 'Roboto';
	margin: 0;
  padding: 0;
}

a,
a:visited {
	color: var(--blue);
}

.main_header {
	background: var(--header-color);
	box-shadow: 0 0 4px 4px rgba(0,0,0,.15);
	font-size: 10px;
	padding: 0 2em;

	&--high-season {
		@extend .main_header;
		background: var(--high-season);
	}

	&__upper {
		align-items: center;
		display: flex;
		justify-content: space-between;
	}
}

.options_menu {
	background: var(--options-menu);
	border-radius: var(--border-radius);
	box-shadow: 0 0 8px 4px rgba(0,0,0,.15);
	display: none;
	position: absolute;
	right: -2px;
	top: 6em;
	text-align: left;
	width: 215px;

	&--show {
		@extend .options_menu;
		display: block;
		z-index: 3;
	}

	&__list {
		display: flex;
		flex-direction: column;
		list-style: none;
		margin: 0;
		padding: 0;
		position: relative;
		z-index: 2;
	}

	&__item {
		padding: 5px 10px;
		font-size: 1rem;
		position: relative;
		z-index: 10;

		&:hover {
			background-color: var(--blue);
			text-decoration: none;

			.options_menu__link {
				color: var(--white);
			}
		}

		& > form {
			margin: 0;
		}
	}

	&__separator {
		border-bottom: 1px solid var(--input-border);
		padding-top: 10px;
		width: 100%;
	}

	&__division {
		border-bottom: 1px solid var(--input-border);
		width: 100%;
	}

	&__link {
		color: var(--options-menu-text);
		font-weight: normal;
		display: block;
		height: inherit;
		width: inherit;
		background: transparent;
		border: none;
		padding: 0;

		&:visited {
			color: var(--options-menu-text);
		}

		&:hover {
			color: var(--white);
			text-decoration: none;
		}

		&--modal {

			&-edit,
			&-show,
			&-destroy {
				@extend .options_menu__link;

				&:visited {
					color: var(--options-menu-text);
				}

				&:hover {
					color: var(--white);
					text-decoration: none;
				}
			}
		}
	}
}

.main_footer {
	border-top: 1px solid var(--footer-line);
	color: var(--text);
	padding: {
		top: 5em;
		bottom: 2em;
		left: 0;
		right: 0;
	}
	font-size: 10px;

	& > section {
		width: 50%;
	}

	&__container {
		@extend .container;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.main_footer__left {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.main_footer__right {}

	.company {
		max-width: 280px;

		&__text {
			font-size: 1.6em;
		}
	}

	.contact {
		clear: both;
		display: flex;

		&__ico {
			width: 8em;

			.icon-envelope {
				@extend .icon-envelope;
				font-size: 4em;
			}
		}

		&__info {
			display: flex;
			flex-direction: column;
			justify-content: center;
		}

		&__title,
		&__content {
			margin: 0;
			font-weight: 700;
		}

		&__title {
			font-size: 1.3em;
			color: var(--footer-contact);
		}

		&__content {
			font-size: 1.6em;
		}

		&__link {
			color: var(--footer-contact-link);

			&:hover {
				color: var(--blue);
				text-decoration: none;
			}
		}
	}

	.legal {
		border-top: 1px solid var(--footer-line);
		text-align: center;
		padding: {
			top: 2em;
			bottom: 0;
			left: 0;
			right: 0;
		}
		margin: {
			top: 2em;
		}

		&__text {
			font-size: 1.2em;
			margin: 0;
		}
	}
}

.flags {
	display: flex;
	flex-flow: row wrap;
	justify-content: space-between;
	margin: {
		top: 2em;
		right:0;
		bottom:0;
		left:0;
	}
	padding: 0;

	.flag {

		&__item {
			display: flex;
			list-style: none;
			margin: {
				bottom: .5em;
			}
		}

		&__img {
			height: 6em;
		}

		&__svg {
			height: 100%;
			width: 10em;
		}

		&__data {
			display: flex;
			flex-direction: column;
			justify-content: center;
			width: 12em;
		}

		&__title,
		&__phone {
			font-size: 1.5em;
			margin: 0;
			padding-left: .5em;
		}

		&__title {
			font-weight: 700;
			text-transform: uppercase;
		}
		&__phone {
			font-weight: 300;
		}

		&__link {
			color: var(--text);

			&:visited {
				color: inherit;
			}

			&:hover {
				text-decoration: none;
			}
		}
	}
}

.option-button {
	position: relative;
	// pointer-events: none;

	&--header {
		@extend .option-button;
		float: right;
		top: -0.5em;

		& .option-button__link {
			background: var(--options-btn-header-bg);
			border: 1px solid var(--options-btn-header-border);
			color: var(--options-btn-text);

			&:visited {
				color: var(--options-btn-text);
			}

			&:hover {
				background: var(--options-btn-header-hover);
				border: 1px solid var(--options-btn-header-hover);
				color: var(--options-btn-text-hover);
				text-decoration: none;
			}
		}
	}

	&__link {
		color: var(--options-btn-text);
		text-transform: uppercase;
		padding: 15px 24px;
		border-radius: var(--border-radius);
		font-weight: 700;
		font-size: 14px;
		display: inline-block;
		position: relative;
		z-index: 1;

		&:visited {
			color: inherit;
		}

		&:hover {
			color: var(--options-btn-text-hover);
		}

		&:after {
			content: '\e805';
			font-family: 'fontello';
			display: inline-block;
			color: inherit;
			position: relative;
			right: 0;
		}
	}

	&__text {
		display: inline-block;
		pointer-events: none;
		width: 70px;
	}

	&__option-link {
		color: var(--options-btn-text);
		padding: 15px 10px;
		display: block;

		&:visited {
			color: inherit;
		}

		&:hover {
			text-decoration: none;
		}
	}

	&__options {
		background: var(--options-btn-options-bg);
		border-radius: var(--border-radius);
		box-shadow: 0 0 4px 4px rgba(0,0,0,.15);
		box-sizing: border-box;
		display: none;
		position: absolute;
		top: 58px;
		width: 135px;

		&--open {
			@extend .option-button__options;
			display: block;
			overflow: hidden;
		}
	}

	&__options-list {
		margin: 0;
		padding: 0;
		position: relative;
		z-index: 2;
	}

	&__option {
		list-style: none;
		padding: 5px;

		&:hover {
			background-color: var(--blue);
			color: var(--white);
			text-decoration: none;
		}
	}

	&__separator {
		border-top: 1px solid var(--color-line-stronger);
		list-style: none;
		display: block;
	}
}

.footer_logo {

	&__svg {
		width: 100%;
		height: 68px;
	}

	&__bio { fill: var(--bf-light-blue) }
	&__filtro { fill: var(--bf-dark-blue) }
	&__slogan { fill: var(--bf-logo-gray) }
}

.main {

	&__container {
		@extend .container;
		color: var(--text);
		// min-height: calc(100vh - 80px);
		padding: 5em 0;
	}

	&__title {
		font-weight: 300;
		font-size: 2.4em;
		margin: {
			top: 0;
			bottom: 1.5em;
			right: 0;
			left: 0;
		}

		&s {
			@extend .main__title;
			margin: 0;
		}
	}

	&__subtitle {
		font-weight: 300;
		font-size: 1.25em;
		margin: {
			top: 0;
			bottom: 2.5em;
			right: 0;
			left: 0;
		}
	}

	&__division {

	}
}

.elements_list {
	background: var(--elements_list-bg);
	border-radius: var(--border-radius);
	box-shadow: 0 3px 4px 2px rgba(0, 0, 0, 0.15);
	font-size: 1rem;
	padding: 10px;
	margin-bottom: 2em;

	.table_header {
		border-bottom: 1px solid var(--color-line);
		padding: 1em;

		&__title{
			font-weight: 700;
		}
	}

	.table_main {

		&__table {
			width: 100%;

			&-header {
				font-weight: 700;
				color: var(--table_main-header);
				text-align: center;

				&:first-child {
					text-align: left;
				}

				&--left-text {
					text-align: left;
				}

				&--options {
					@extend .table_main__table-header;
				}

				&--email {
					@extend .table_main__table-header;
					display: none;
				}
			}

			&-data {
				font-weight: 300;
				text-align: center;

				&--options {
					@extend .table_main__table-data;
					position: relative;
					width: 100px;
				}

				&--right-text {
					text-align: right;
				}

				&--left-text {
					text-align: left;
				}

				&--center-text {
					text-align: center;
				}

				&--confirmation {
					text-align: center;
				}

				&--email {
					@extend .table_main__table-data;
					display: none;
				}

				&--padding {
					padding: {
						right: 1em;
						left: 1em;
					}
				}

				&--date {
					@extend .table_main__table-data--center-text;
					padding: .25em;
				}

				&-span {
					color: var(--gray70);
					display: block;
					font-style: italic;
					font-size: .8em;
					font-weight: lighter;
				}
			}

			&-row {
				height: 5em;
				border-bottom: 1px solid var(--color-line);
				position: relative;

				&:last-child {
					border: none;
				}

				&--stripped {
					@extend .table_main__table-row;
				}

				&--no-height {
					@extend .table_main__table-row;
					height: auto;
				}
			}
		}

		&__thead {
			border-bottom: 1px solid var(--color-line);

			&-row {
				height: 3em;

				> th:first-child {
					max-width: 15px;
				}
			}
		}

		&__link {

			&--options {
				@extend .icon-options;
				font-family: 'fontello';
				font-style: normal;

				&-open {
					@extend .table_main__link--options;
					position: relative;

					&:after {
						content: url(<%= asset_path('options_menu_triangle-light.svg') %>);
						display: block;
						position: absolute;
						margin: -25px -4px 0;
						width: 35px;
						z-index: 3;
					}
				}

				&:hover {
					text-decoration: none;
					color: var(--blue);
				}
			}

			&-show {
				color: var(--text);

				&:hover {
					color: var(--blue);
					text-decoration: none;
				}
			}
		}

		&__input {
			@include inputs;
			background: transparent;
			color: var(--text);
		}

		.options_menu {
			padding: 5px 0;
			top: 58px;

			// &:before {
			// 	top: -17px;
			// 	margin: 0 0 0 120px;
			// }
		}

		&__user {
			border-radius: 50%;
			display: inline-block;
			height: .5em;
			width: .5em;

			&-disabled {
				@extend .table_main__user;
				background-color: var(--red);
			}

			&-unconfirmed {
				@extend .table_main__user;
				background-color: var(--yellow);
			}

			&-confirmed {
				@extend .table_main__user;
				background-color: var(--green);
			}
		}
	}

	.icon-options {
		font-size: 1.5em;
		color: var(--elements_list-options_btn);
	}
}

.show {
	display: block;
}

.field {
	margin: {
		bottom: 1em;
	}
	padding: 5px;
	width: 100%;

	label {
		font-weight: 300;
		display: block;
		margin: {
			bottom: 2px;
		}
	}

	textarea,
	input[type="text"],
	input[type="number"],
	input[type="password"] {
		@include inputs;

		&::placeholder,
		&::-moz-placeholder,
		&:-ms-input-placeholder {
			padding: {
				top: 14px;
				left: 5px;
				right: 5px;
				bottom: 5px;
			}
		}
	}

	textarea {
		line-height: 1em;
	  min-height: 8em;
	}

	select {
		width: 100%;
	}

	[type="checkbox"] ~ label {
		display: inline-block;
	}

	&.no-border input {
		border: none;
	}

	&.date > select {
		width: auto;
		display: inline-block;
	}

	li {
		list-style: none;
	}

	&__value {
		@include inputs;
		display: flex;
		padding: 0;

		&-span {
			align-items: center;
			background-color: var(--field-value-bg);
			border-left: 1px solid var(--input-border);
			color: var(--input-label-text);
			display: flex;
			flex-grow: 0;
			justify-content: center;
			padding: 8px 0.75rem;
		}

		input[type="text"][class$="-input"],
		input[type="number"][class$="-input"] {
			border: none;
		}

		&-input {
			@include border-radius(var(--border-radius) 0 0 var(--border-radius));
			background-color: var(--field-value-bg);

			&.size__input {
				border: 0;
			}
		}
	}

	&.description {
		display: none;
	}

	&.show {
		display: block;
	}

	&.season {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	&-wrap {
		@extend .field;
		width: auto;
		max-width: 200px;

		.field__value {
			max-width: 300px;

			&-span {
				border-radius: 0 5px 5px 0;
			}
		}
	}
}

.datepicker {
	-webkit-appearance: none;
	background: transparent;
	border: 1px solid var(--input-border);
	border-radius: var(--border-radius);
	color: var(--input-font);
	padding: 0.5rem;
}

.actions {
	text-align: center;
	margin: 3rem;

	.action-btn {
		background-color: var(--blue);
		border: 1px solid var(--blue);
		border-radius: var(--border-radius);
		color: var(--white);
		padding: 0.5em 0.6em;
	}
}

.work_summaries {
	padding: 0;
	margin: 0;
}

.work_summary {
	border: 1px solid var(--color-line-stronger);
	@include border-radius;
	list-style: none;
	padding: .25rem;
	position: relative;
	margin: 0.5%;

	&:hover &__delete {
		color: var(--red);
		text-decoration: none;

		&_div {
			border: 1px solid var(--red);
			background-color: var(--body-color);
			display: flex;
		}
	}

	&__delete {
		color: var(--white);

		&_div {
			display: none;
			align-items: center;
			background-color: var(--red);
			border: 1px solid transparent;
			@include border-radius(50%);
			height: 1.5em;
			justify-content: center;
			width: 1.5em;
			position: absolute;
			right: -0.5em;
			top: -0.5em;
		}

		&:visited {
			color: var(--white);
		}
	}

	&__button {
		list-style: none;
	}

	&__plus {
		align-items: center;
		background: var(--blue);
		border: 1px solid var(--blue);
		@include border-radius(50%);
		color: white;
		display: flex;
		height: 5em;
		justify-content: center;
		margin: 1em auto 3em auto;
		width: 5em;

		&:hover {
			background: transparent;
			color: var(--blue);
			text-decoration: none;
			font-weight: bolder;
		}
	}

	.field:last-child {
		margin-bottom: 0;
		padding-bottom: 0;
	}
}

.system_size,
.add_task {

	&__elements {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		padding: 0;
	}

	&__size {
		@extend .work_summary;
	}

	&__delete {
		@extend .work_summary__delete;

		&_div {
			@extend .work_summary__delete_div;
		}
	}


	&__plus {
		@extend .work_summary__plus;

		&:visited {
			color: var(--white);
		}

		&:hover {
			color: var(--blue);
		}
	}
}

.view_info {

	&__title {
		font-weight: 300;
		line-height: .5em;
		margin: 0 0 30px;

		// &:after {
		// 	content: ':';
		// 	position: relative;
		// }
	}

	&__data {
		font-size: 1.5em;
		margin: 10px 0 0;

		&--two-lines {
			@extend .view_info__data;
			line-height: .75em;
			margin: {
				top: 15px;
			}
		}

		a {
			color: var(--text);
		}

		& ~ & {
			margin: 0;
		}

		&-description {
			margin-bottom: 0;
		}
	}

	&__element {
		@extend .view_info__data;
		list-style: none;

		&:before {
			content: '\00BB';
			position: relative;
			right: .75em;
		}

		&s {

		}
	}

	&__work_summaries {
		@extend .work_summaries;
		margin: {
			top: 0;
			right: 0;
			bottom: 1em;
			left: 0;
		}
	}

	&__work_summary {
		@extend .work_summary;
		padding: .5rem;
	}

	&__ws_hours,
	&__ws_materials,
	&__ws_description {
		@extend .view_info__data;
		margin: 0;
	}

	&__ws_description {}
	&__ws_hours {}
	&__ws_materials {}

	&__ws_title {
		@extend .view_info__title;

		&:last-child {
			margin-bottom: 0;
		}
	}

	&__value-type {
		font-weight: lighter;
		font-size: 0.75em;
	}
}

.space {
	height: 5em;
}

.table-standards {
	width: 100%;
}

.col_span {

	&__option {

		&--exposed {
			display: table-cell;
		}

		&--hidden {
			display: none;
		}
	}

	&__range {
		text-align: center;
		width: 85px;
	}
}

.graph {
	list-style: none;
	margin: 2rem 0;

	&s {
		margin: 0;
		padding: 0;
	}

	&__title {
		margin-bottom: 1rem;
	}

	&__comment {
		margin-top: 1rem;
	}

	&__text_area {
		@include inputs;
		// width: 100%;
	}
}

[data-action="show"] {

	.graph__text_area {
		border: none;
	}
}

.flow {
	$flow: &;

	&s {
		padding: 0;
	}

	&__li {
		padding: .25em;
		border-bottom: 1px solid var(--color-line);
		width: 100px;
		list-style: none;
		text-align: left;
		width: 300px;
		display: flex;
		justify-content: space-between;

		&-input {
			background-color: transparent;
			color: var(--text);
			text-align: right;
		}

		&:last-child {
			border-bottom: none;
		}
	}
}

.svg_img {
	text-align: center;

	&__2-steps {
		max-width: 184px;

		&--1 {
			@extend .svg_img__2-steps;

			.s1 { fill: var(--orange);}
			.s2 { fill: var(--blue);}
			.s3 { fill: var(--blue);}

			.c1 {}
			.c2 { display: none;}
			.c3 { display: none;}
		}

		&--2 {
			@extend .svg_img__2-steps;

			.s1 { fill: var(--blue);}
			.s2 { fill: var(--orange);}
			.s3 { fill: var(--blue);}

			.c1 { display: none; }
			.c2 {}
			.c3 { display: none; }
		}
	}

	&__3-steps {
		max-width: 300px;

		&--1 {
			@extend .svg_img__2-steps--1;
			@extend .svg_img__3-steps;
		}

		&--2 {
			@extend .svg_img__2-steps--2;
			@extend .svg_img__3-steps;
		}

		&--3 {
			@extend .svg_img__3-steps;

			.s1 { fill: var(--blue);}
			.s2 { fill: var(--blue);}
			.s3 { fill: var(--orange);}

			.c1 { display: none; }
			.c2 { display: none; }
			.c3 {}
		}
	}
}

.select_week {

	&__label {
		font-weight: 300;
		margin-bottom: 2px;
	}

	&__week {
		border: 1px solid var(--color-line-stronger);
		border-radius: var(--border-radius);
		display: grid;
		grid-template-columns: repeat(7, 1fr);
		overflow: hidden;
		padding: 0;
	}

	&__day {
		list-style: none;
		flex-grow: 1;
		height: 100px;
		border-right: 1px solid var(--color-line-stronger);

		&:last-child {
			border-right: none;
		}
	}

	&__day-link {
		display: flex;
		justify-content: center;
		align-items: center;
		height: inherit;
		width: inherit;
		flex-basis: 100%;

		&:hover {
			@include day-selected();
		}

		&--selected {
			@include day-selected();

			&:visited,
			&:hover {
				@include day-selected();
			}
		}

		span {
			display: none;
		}
	}
}

.select_month {

	&s {
		@extend .select_month__month;
		grid-template-columns: repeat(6, 1fr);

		&__month {
			@extend .select_month__day;

			&-link {
				@extend .select_month__day-link;

				&--selected {
					@extend .select_month__day-link--selected;
				}
			}

			&:nth-child(6) {
				border-right: none;
			}

			&:nth-child(7),
			&:nth-child(8),
			&:nth-child(9),
			&:nth-child(10),
			&:nth-child(11),
			&:nth-child(12) {
				border-bottom: none;
			}
		}
	}

	&__label {
		@extend .select_week__label;
	}

	&__month {
		padding: 0;
		display: grid;
		list-style: none;
		border: 1px solid var(--color-line-stronger);
		border-radius: var(--border-radius);
		overflow: hidden;
	}

	&__sup {
		margin-right: .175rem;
	}

	&__day {
		@extend .select_week__day;
		border-bottom: 1px solid var(--color-line-stronger);

		&-link {
			@extend .select_week__day-link;

			&:hover {
				@include day-selected();
			}

			&--selected {
				@include day-selected();

				&:visited {
					@include day-selected();
				}

				span {
					display: none;
				}
			}
		}
	}

	&__week {
		@extend .select_week__week;
		border: none;

		&-item {

			&:last-child {

				li {
					border-bottom: none;
				}
			}
		}
	}
}

.step {

	&s {
		// border: 1px solid tomato;
		overflow: hidden;
		max-height: var(--steps-mask-height);
		transition: max-height .5s ease-in-out;

		.select_week { display: none; }
		.select_month { display: none; }

		&__trail {
			position: relative;
			top: var(--steps-trail-position);
			transition: top .45s ease-in-out;
		}
	}

	&-1 {
	}
	&-2 {
		// display: none;
	}

	&__error {
		display: inline-block;
		background: var(--red);
		color: white;
		padding: 0 7px;
