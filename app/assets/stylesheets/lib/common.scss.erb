button.modal-footer {

	&__prev-btn {
		@extend .btn;
		border: 1px solid var(--green);
		border-radius: var(--border-radius);
		color: var(--green);

		&:disabled,
		&[disabled],
		&[disabled=disabled],
		&:disabled:hover {
			border-color: var(--modal-disabled-btn);
			color: var(--modal-disabled-btn);
			cursor: default;
		}

		&:hover {
			border-color: transparent;
			background: var(--green);
			color: var(--modal-bg);
		}
	}

	&__next-btn {
		@extend .btn;
		border-radius: var(--border-radius);
		border: 1px solid var(--blue);
		color: var(--blue);

		&:hover,
		&:focus,
		&:active {
			background: var(--blue);
			border-color: transaprent;
			color: var(--modal-bg);
		}
	}

	&__save-btn {
		@extend .modal-footer__next-btn;
		// display: none;

		&:active {
			@extend .modal-footer__next-btn;
		}
	}
}

.highseason {
