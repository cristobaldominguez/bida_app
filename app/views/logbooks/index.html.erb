<h1>Logbooks</h1>

<table>
  <thead>
    <tr>
      <th>Plant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logbooks.each do |logbook| %>
      <tr>
        <td><%= logbook.plant.created_at.to_date.strftime("%B %Y") %></td>
        <td><%= link_to 'Show', [@plant, logbook] %></td>
        <td><%= link_to 'Edit', edit_plant_logbook_path(@plant, logbook) %></td>
        <td><%= link_to 'Destroy', [@plant, logbook], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

