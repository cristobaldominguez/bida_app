<h1>Graph Standards</h1>

<table>
  <thead>
    <tr>
      <th>Plant</th>
      <th>Chart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @graph_standards.each do |graph_standard| %>
      <tr>
        <td><%= graph_standard.chart.name %></td>
        <td><%= graph_standard.chart.shape %></td>
        <td><% if can? :read, GraphStandard %><%= link_to t(:show, scope: :global), plant_graph_standard_path(@plant, graph_standard) %><% end %></td>
        <td><% if can? :edit, GraphStandard %><%= link_to t(:edit, scope: :global), edit_plant_graph_standard_path(@plant, graph_standard) %><% end %></td>
        <td><% if can? :destroy, GraphStandard %><%= link_to t(:destroy, scope: :global), plant_graph_standard_path(@plant, graph_standard), method: :delete, data: { confirm: t(:confirm, scope: :global) } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
