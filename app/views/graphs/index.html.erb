<h1>Graphs</h1>

<table>
  <thead>
    <tr>
      <th>Report</th>
      <th>Graph standard</th>
      <th>Active</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @graphs.each do |graph| %>
      <tr>
        <td><%= graph.report %></td>
        <td><%= graph.graph_standard %></td>
        <td><%= graph.active %></td>
        <td><%= graph.comment %></td>
        <td><% if can? :read, Graph %><%= link_to t(:show, scope: :global), graph %><% end %></td>
        <td><% if can? :edit, Graph %><%= link_to t(:edit, scope: :global), edit_graph_path(graph) %><% end %></td>
        <td><% if can? :destroy, Graph %><%= link_to t(:destroy, scope: :global), graph, method: :delete, data: { confirm: t(:confirm, scope: :global) } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Graph %>
<%= link_to 'New Graph', new_plant_graph_path %>
<% end %>
