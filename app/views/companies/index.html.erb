<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Taxid</th>
      <th>Industry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.taxid %></td>
        <td><%= company.industry.name %></td>
        <td><% if can? :read, Company %><%= link_to 'Show', company %><% end %></td>
        <td><% if can? :edit, Company %><%= link_to 'Edit', edit_company_path(company) %><% end %></td>
        <td><% if can? :destroy, Company %><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Company %>
<%= link_to 'New Company', new_company_path %>
<% end %>
