<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Taxid:</strong>
  <%= @company.taxid %>
</p>

<p>
  <strong>Industry:</strong>
  <%= @company.industry.name %>
</p>

<p>
  <strong>Plants:</strong>
  <% if @plants %>
  <ul>
  <% @plants.each do |plant| %>
    <li>
      <span><%= plant.name %></span>
      <span><%= link_to 'Show', plant %></span>
      <span><%= link_to 'Edit', edit_plant_path(plant) %></span>
      <span><%= link_to 'Destroy', [@company, plant], method: :delete, data: { confirm: 'Are you sure?' }  %></span>
    </li>
  <% end %>
    <li><span><%= link_to 'New Plant', new_company_plant_path(@company) %></span></li>
  </ul>
  <% end %>
</p>

