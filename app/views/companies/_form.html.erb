<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: t(:name, scope: [:activerecord, :attributes, :company]) %>
  </div>

  <div class="field">
    <%= form.label :taxid %>
    <%= form.text_field :taxid, placeholder: t(:taxid, scope: [:activerecord, :attributes, :company]) %>
  </div>

  <div class="field no-border">
    <%= form.label :industry_id %>
    <%= form.collection_select(:industry_id, @industries, :first, :second, {prompt: t(:select_industry, scope: :company)})  %>
  </div>

  <div class="field no-border">
    <%= form.label :contact_id %>
    <%= form.collection_select(:contact_id, @users, :id, :full_name, {prompt: t(:select_a_contact, scope: :company)})  %>
  </div>

  <div class="field no-border">
    <%= form.label :bf_contact_id %>
    <%= form.collection_select(:bf_contact_id, @users, :id, :full_name, {prompt: t(:select_a_contact, scope: :company)})  %>
  </div>

  <div class="actions">
    <%= form.submit class: 'action-btn' %>
  </div>
<% end %>
