<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :log_type_id %>
    <%= form.collection_select(:log_type_id, @log_types, :id, :name, {prompt: 'Select'}) %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_area :name %>
  </div>

  <div class="field">
    <%= form.label :frecuency_id %>
    <%= form.collection_select(:frecuency_id, @frecuencies, :id, :name, {prompt: 'Select'}) %>
  </div>

  <div class="field">
    <%= form.label :cycle %>
    <%= form.number_field :cycle, {placeholder: 'Select'} %>
  </div>

  <div class="field">
    <%= form.label :responsible %>
    <%= form.collection_select(:responsible, @responsibles, :first, :second, {prompt: 'Select a Responsible'}) %>
  </div>

  <div class="field">
    <%= form.label :input_type_id %>
    <%= form.collection_select(:input_type_id, @input_types, :id, :option, {prompt: 'Select'}) %>
  </div>


  <div class="actions">
    <%= form.submit class: 'action-btn' %>
  </div>
<% end %>
