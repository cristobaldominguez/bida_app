<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.state %></td>
        <td><%= report.date.strftime("%B, %Y") %></td>
        <td><% if can? :read, Report %><%= link_to 'Show', plant_report_url(@plant, report) %><% end %></td>
        <td><% if can? :edit, Report %><%= link_to 'Edit', edit_plant_report_path(@plant, report) %><% end %></td>
        <td><% if can? :destroy, Report %><%= link_to 'Destroy', plant_report_path(@plant, report), method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Report  %>
<%= link_to 'New Report', new_plant_report_path(@plant) %>
<% end %>
