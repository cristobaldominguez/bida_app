<% if can? :edit, Alert %>
  <%= render 'shared/buttons/option_button', alt: 'header' do %>
    <li class="option-button__option"><%= link_to 'Edit', edit_plant_alert_path(@plant, @alert), class: 'option-button__option-link' %></li>
    <% if can? :destroy, Alert %>
    <li class="option-button__separator"></li>
    <li class="option-button__option"><%= link_to 'Destroy', plant_alert_path(@plant, @alert), method: :delete, data: { confirm: 'Are you sure?' }, class: 'option-button__option-link' %></li>
    <% end %>
  <% end %>
<% end %>

<h2 class="main__title">Alert <%= @alert.title %></h2>

<p>
  <strong>Atention:</strong>
  <ul>
    <% @alert.users.each do |user| %>
    <li><%= user.full_name %></li>
    <% end %>
</ul>
</p>

<p>
  <strong>Incident Type:</strong>
  <%= @alert.incident_type.name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @alert.status.name %>
</p>

<p>
  <strong>Solution Priority:</strong>
  <%= @alert.priority.name %>
</p>

<p>
  <strong>Incident description:</strong>
  <%= @alert.incident_description %>
</p>

<p>
  <strong>Negative impact:</strong>
  <%= @alert.negative_impact %>
</p>

<p>
  <strong>Solution:</strong>
  <%= @alert.solution %>
</p>

<p>
  <strong>Incident resolution:</strong>
  <%= @alert.incident_resolution %>
</p>

<p>
  <strong>Solution target date:</strong>
  <%= @alert.solution_target_date %>
</p>

<p>
  <strong>Technician hours required:</strong>
  <%= @alert.technician_hours_required %>
</p>
