<h1>Alerts</h1>

<table>
  <thead>
    <tr>
      <th>Incident</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.title %></td>
        <td><%= link_to 'Show', plant_alert_path(@plant, alert) %></td>
        <td><%= link_to 'Edit', edit_plant_alert_path(@plant, alert) %></td>
        <td><%= link_to 'Destroy', [@plant, alert], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Alert', new_plant_alert_path(@plant) %>
