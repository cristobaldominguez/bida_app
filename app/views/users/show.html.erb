<% if can? :edit, User %>
  <%= render 'shared/buttons/option_button', alt: 'header' do %>
    <li class="option-button__option"><%= link_to 'Edit', edit_user_path(@user), class: 'option-button__option-link' %></li>
  <% end %>
<% end %>

<h2 class="main__titles"><%= @user.full_name %></h2>
<h3 class="main__subtitle">User</h3>


<div class="view_info">
  <p class="view_info__data"><%= @user.name %></p>
  <p class="view_info__title">Name</p>
</div>

<div class="view_info">
  <p class="view_info__data"><%= @user.lastname %></p>
  <p class="view_info__title">Lastname</p>
</div>

<div class="view_info">
  <p class="view_info__data"><%= @user.email %></p>
  <p class="view_info__title">Email</p>
</div>

<div class="view_info">
  <% if @user.address02.present? %>
  <p class="view_info__data--two-lines"><%= @user.address01 %></p>
  <p class="view_info__data"><%= @user.address02 %></p>
  <% else %>
  <p class="view_info__data"><%= @user.address01 %></p>
  <% end %>
  <p class="view_info__title">Address</p>
</div>

<div class="view_info">
  <p class="view_info__data"><%= @user.phone %></p>
  <p class="view_info__title">Phone</p>
</div>

<div class="view_info">
  <p class="view_info__data"><%= @user.mobile %></p>
  <p class="view_info__title">Mobile</p>
</div>

<div class="view_info">
  <p class="view_info__data"><%= @user.role.humanize %></p>
  <p class="view_info__title">Role</p>
</div>

<div class="view_info">
  <p class="view_info__data"><%= @user.interface_color %></p>
  <p class="view_info__title">Interface Color</p>
</div>

<p><strong>Plants:</strong></p>
<ul>
  <% @user.plants.each do |plant| %>
    <li><%= link_to plant.name, plant %></li>
  <% end %>
</ul>
