<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Role</th>
      <th>Plants</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.role.humanize %></td>
        <td><%= user.plants.map { |p| p.name }.join(', ') %></td>
        <td><% if can? :read, User %><%= link_to 'Show', user %><% end %></td>
        <td><% if can? :edit, User %><%= link_to 'Edit', edit_user_path(user) %><% end %></td>
        <td><% if can? :destroy, User %><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
        <td><% if !user.confirmed? %><%= button_to 'Resend Confirmation', user_confirmation_path, params: { user: {email: user.email} }, method: :post, remote: true  %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, User %>
<%= link_to 'New User', new_user_path %>
<% end %>
