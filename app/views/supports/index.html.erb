<h1>Supports</h1>

<table>
  <thead>
    <tr>
      <th>Active</th>
      <th>Number</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Client onsite</th>
      <th>Name client onsite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supports.each do |support| %>
      <tr>
        <td><%= support.active %></td>
        <td><%= support.number %></td>
        <td><%= support.start_date %></td>
        <td><%= support.end_date %></td>
        <td><%= support.client_onsite %></td>
        <td><%= support.name_client_onsite %></td>
        <td><%= link_to 'Show', support %></td>
        <td><%= link_to 'Edit', edit_support_path(support) %></td>
        <td><%= link_to 'Destroy', support, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

