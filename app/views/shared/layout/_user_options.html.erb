<nav class="user_options">
  <ul class="user_options__list">
    <li class="user_options__item--ui">
      <a class="user_options__link--<%= current_user.interface_color %>-ui" href="#">
        <% if current_user.dark? %>
        <svg class="user_options__svg user_options__sun"><use xlink:href="#sun"></use><svg>
        <% else %>
        <svg class="user_options__svg user_options__moon"><use xlink:href="#moon"></use><svg>
        <% end %>
      </a>
    </li>
    <li class="user_options__item">
      <a class="user_options__link--users" href="#">
        <svg class="user_options__svg user_options__user"><use xlink:href="#user"></use><svg>
      </a>
      <div class="options_menu">
        <ul class="options_menu__list">
          <li class="options_menu__item"><%= link_to t(:edit_profile, scope: :global), edit_user_path(current_user.id), class: 'options_menu__link' %></li>
          <li class="options_menu__item"><%= link_to t(:change_password, scope: :global), edit_user_registration_path, class: 'options_menu__link' %></li>
          <li class="options_menu__separator"></li>
          <li class="options_menu__item"><%= link_to t(:logout, scope: :global), destroy_user_session_path, method: :delete, class: 'options_menu__link'  %></li>
        </ul>
        <div class="unclick--user"></div>
      </div>
    </li>
  </ul>
</nav>
