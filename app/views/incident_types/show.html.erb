<% if can? :edit, IncidentType %>
  <%= render 'shared/buttons/option_button', alt: 'header' do %>
    <li class="option-button__option"><%= link_to t(:edit, scope: :global).downcase, edit_incident_type_path(@incident_type), class: 'option-button__option-link' %></li>
    <% if can? :create, IncidentType %>
    <li class="option-button__separator"></li>
    <li class="option-button__option"><%= link_to t(:new, scope: :incident_type).downcase, new_incident_type_path, class: 'option-button__option-link' %></li>
    <% end %>
  <% end %>
<% end %>

<h2 class="main__title"><%= t(:title, scope: :incident_type) %></h2>

<% I18n.available_locales.map do |locale| %>
<div class="view_info">
  <p class="view_info__data"><%= @incident_type.i18n_name[locale.to_s] %></p>
  <p class="view_info__title"><%= t(:name, scope: [:activerecord, :attributes, :incident_type]) %> (<%= locale %>)</p>
</div>
<% end %>
