<%= form_with(model: incident_type, local: true) do |form| %>

  <% I18n.available_locales.map do |locale| %>
  <div class="field date">
    <label for="name[<%= locale.to_s %>]"><%= t(:name, scope: [:activerecord, :attributes, :incident_type]) %> (<%= locale %>)</label>
    <input type="text" value="<%= incident_type.i18n_name[locale.to_s] %>" name="incident_type[i18n_name][<%= locale.to_s %>]" id="i18n_name_<%= locale %>">
  </div>
  <% end %>

  <div class="actions">
    <%= form.submit class: 'action-btn' %>
  </div>
<% end %>
