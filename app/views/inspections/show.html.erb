<% if can? :edit, Inspection %>
  <%= render 'shared/buttons/option_button', alt: 'header' do %>
    <li class="option-button__option"><%= link_to 'Edit', edit_plant_inspection_path(@plant, @inspection), class: 'option-button__option-link' %></li>
    <% if can? :create, Inspection %>
    <li class="option-button__separator"></li>
    <li class="option-button__option"><%= link_to 'New', new_plant_inspection_path(@plant, @inspection), class: 'option-button__option-link' %></li>
    <% if can? :destroy, Inspection %><li class="option-button__option"><%= link_to 'Destroy', plant_inspection_path(@plant, @inspection), class: 'option-button__option-link', method: :delete, data: { confirm: 'Are you sure?' } %></li><% end %>
    <% end %>
  <% end %>
<% end %>

<h2 class="main__title">Inspection #<%= @inspection.id %></h2>

<h2 class="main__division">General Info</h2>

<div class="view_info">
  <% if (@inspection.on_site_client) %>
  <p class="view_info__data"><%= @inspection.on_site_user.full_name %></p>
  <% else %>
  <p class="view_info__data"><%= @inspection.on_site_client %></p>
  <% end %>
  <p class="view_info__title">Client OnSite</p>
</div>

<div class="view_info">
  <p class="view_info__data"><%= @inspection.report_technician.full_name %></p>
  <p class="view_info__title">Report Technician</p>
</div>

<div class="view_info">
  <ul class="view_info__elements">
    <% @inspection.users.each do |user| %>
    <li class="view_info__element"><%= user.full_name %></li>
    <% end %>
  </ul>
  <p class="view_info__title">Notify to</p>
</div>

<div class="view_info">
  <p class="view_info__data"><%= @inspection.date %></p>
  <p class="view_info__title">Inspection Date</p>
</div>

<h2 class="main__division">Water Quality</h2>

<% @fluents.each do |fluent|%>
<div class="fluent__<%= fluent.output.name.parameterize.underscore %>">
  <h4><%= fluent.output.name %></h4>

  <div class="view_info">
    <p class="view_info__data"><%= fluent.ph %></p>
    <p class="view_info__title">pH</p>
  </div>

  <div class="view_info">
    <p class="view_info__data"><%= fluent.color.option %></p>
    <% if fluent.color_description.present? %>
    <p class="view_info__data-description"><%= fluent.color_description %></p>
    <% end %>
    <p class="view_info__title">Color</p>
  </div>

  <div class="view_info">
    <p class="view_info__data"><%= fluent.odor.option %></p>
    <% if fluent.odor_description.present? %>
    <p class="view_info__data-description"><%= fluent.odor_description %></p>
    <% end %>
    <p class="view_info__title">Odor</p>
  </div>

  <% if fluent.cod.present? %>
  <div class="view_info">
    <p class="view_info__data"><%= fluent.cod %> <span class="view_info__value-type">mg/L</span></p>
    <p class="view_info__title">COD</p>
  </div>
  <% end %>

  <% if fluent.ec.present? %>
  <div class="view_info">
    <p class="view_info__data"><%= fluent.ec %> <span class="view_info__value-type">ÂµS/cm</span></p>
    <p class="view_info__title">EC</p>
  </div>
  <% end %>

  <% if fluent.bod.present? %>
  <div class="view_info">
    <p class="view_info__data"><%= fluent.bod %> <span class="view_info__value-type">mg/L</span></p>
    <p class="view_info__title">BOD</p>
  </div>
  <% end %>

  <% if fluent.tss.present? %>
    <div class="view_info">
      <p class="view_info__data"><%= fluent.tss %> <span class="view_info__value-type">mg/L</span></p>
      <p class="view_info__title">TSS</p>
    </div>
  <% end %>

  <% if fluent.tn.present? %>
  <div class="view_info">
    <p class="view_info__data"><%= fluent.tn %> <span class="view_info__value-type">mg/L</span></p>
    <p class="view_info__title">TN</p>
  </div>
  <% end %>

  <% if fluent.tp.present? %>
  <div class="view_info">
    <p class="view_info__data"><%= fluent.tp %> <span class="view_info__value-type">mg/L</span></p>
    <p class="view_info__title">TP</p>
  </div>
  <% end %>

  <% if fluent.sample_comments.present? %>
  <p>
    <strong>Sample comments:</strong>
    <%= fluent.sample_comments %>
  </p>
  <% end %>
</div>
<% end %>

