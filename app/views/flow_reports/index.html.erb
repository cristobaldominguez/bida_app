<h1>Flow Reports</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flow_reports.each do |flow_report| %>
      <tr>
        <td><%= flow_report.date.strftime("%B, %Y") %></td>
        <td><% if can? :read, FlowReport %><%= link_to 'Show', plant_flow_report_path(@plant, flow_report) %><% end %></td>
        <td><% if can? :edit, FlowReport %><%= link_to 'Edit', edit_plant_flow_report_path(@plant, flow_report) %><% end %></td>
        <td><% if can? :destroy, FlowReport %><%= link_to 'Destroy', plant_flow_report_path(@plant, flow_report), method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, FlowReport %>
<%= link_to 'New Flow Report', new_plant_flow_report_path %>
<% end %>
