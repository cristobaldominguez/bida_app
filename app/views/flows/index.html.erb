<p id="notice"><%= notice %></p>

<h1>Flows</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Plant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flows.each do |flow| %>
      <tr>
        <td><%= flow.value %></td>
        <td><%= flow.plant %></td>
        <td><%= link_to t(:show, scope: :global), flow %></td>
        <td><%= link_to t(:edit, scope: :global), edit_flow_path(flow) %></td>
        <td><%= link_to t(:destroy, scope: :global), flow, method: :delete, data: { confirm: t(:confirm, scope: :global) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flow', new_flow_path %>
